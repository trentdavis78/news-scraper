<!--Homepage-->
<div class="container main-content">
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <img class="articleImg" src={{this.imgURL}} />
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.displayLink}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>No articles available. Click the 'Scrape' button!</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>